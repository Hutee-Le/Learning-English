<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Direction"
            android:textColor="#021753"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:text="Người dùng có thể tùy chỉnh mức chơi từ: dễ, trung bình,khó và gói câu hỏi lần lượt từ 5-10 câu.Sau khi kết thúc chơi sẽ hiện thị kết quả bạn đạt được."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            android:textColor="#00050C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="330dp"
            android:textColor="#00050C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="450dp"
            android:textColor="#00050C"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/BtnHdBack"
            android:layout_marginTop="580dp"
            android:layout_centerHorizontal="true"
            android:text="Trở về"
            android:textStyle="bold"
            />
    </RelativeLayout>
</ScrollView >
